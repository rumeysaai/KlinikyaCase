@using ECommerceDemo.Models
@model Product

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Ürün Ekleme</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form method="post">
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Adı</label>
                            <input type="text" asp-for="@Model.ProductName" class="form-control" id="validationDefault01" name="ProductName" placeholder="" required="">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Ürün Görseli Dosya Yolu</label>
                            <input type="text" asp-for="@Model.ImageUrl" class="form-control" id="validationDefault02" name="ImageUrl" placeholder="" required="">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Marka</label>
                            <input type="text" asp-for="@Model.BrandName" class="form-control" id="brand" name="BrandName" placeholder="" required="">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Açıklaması</label>
                            <input type="text" asp-for="@Model.Description" class="form-control" id="description" name="Description" placeholder="" required="">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Renk</label>
                            <input type="text" asp-for="@Model.Color" class="form-control" id="color" name="Color" placeholder="" required="">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Fiyat</label>
                            <input type="text" asp-for="@Model.Price" class="form-control" id="Price" name="Price" placeholder="" required="">
                        </div> 
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Stok Adedi</label>
                            <input type="text" asp-for="@Model.UnitInStock" class="form-control" id="Size" name="UnitInStock" placeholder="" required="">
                        </div>
                    </div>
                   @* <div class="form-row">
                        <div class="form-group col-md-12">
                            <select asp-for="@Model.Category" class="form-control" aria-required="true">
                                <option value="">Kullanıcı Rolü Seçiniz</option>
                                <option value="category">@Model.Category.CategoryName</option>
                                <option value="category">@Model.Category.CategoryName</option>
                                <option value="category">@Model.Category.CategoryName</option>
                            </select>
                            <span asp-validation-for="@Model.Category.CategoryName" class="text-danger"></span><br />
                        </div>
                    </div>*@
                    <button type="submit" class="btn btn-primary submit mb-4">Yeni Ürün Ekle</button>
                    <p>
                        <a href="#">Tüm şartları okudum, kabul ediyorum</a>
                    </p>
                </form>

            </div>
        </div>
    </div>
</section>