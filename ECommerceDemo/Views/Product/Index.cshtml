@using ECommerceDemo.Models
@model MainModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h4 class="tittle">Ürünler</h4>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">

                    @if (Model.IsLoggedIn)
                    {
                        @if (Model.User.Role == "Müşteri" || Model.User.Role == "Admin")
                        {
                            @foreach (var item in Model.ProductList)
                            {

                                <div class="col-lg-4 card">

                                    <img src="@item.ImageUrl" style="width:700px; height:200px;" class="card-img-top img-fluid" alt="">

                                    <div class="card-body">
                                        <ul class="blog-icons my-4">
                                            <li class="mx-2">
                                                <a>
                                                    <i class="far fa-comment"></i> 0
                                                </a>
                                            </li>
                                            <li>
                                                <a>
                                                    <i class="fas fa-eye"></i> @item.Id
                                                </a>
                                            </li>
                                        </ul>
                                        <h5 class="card-title">
                                            <a href="/Product/ProductReadAll/@item.Id">@item.BrandName</a>
                                            <a href="/Product/ProductReadAll/@item.Id">@item.ProductName</a>
                                        </h5>
                                        <p>@item.Price TL</p><br>
                                        <a href="/Product/ProductReadAll/@item.Id" class="btn btn-primary">İncele</a>
                                        <a href="/Product/AddBasket/@item.Id" class="btn btn-primary">Sepete Ekle</a>
                                    </div>
                                </div>

                            }
                        }
                        @if (Model.User.Role == "Satıcı")
                        {
                            @foreach (var item in Model.ProductList)
                            {
                                <div class="col-lg-4 card">
                                    <a>
                                        <img src="@item.ImageUrl" style="width:200px; height:200px;" class="card-img-top img-fluid" alt="">
                                    </a>
                                    <div class="card-body">
                                        <ul class="blog-icons my-4">
                                            <li class="mx-2">
                                                <a>
                                                    <i class="far fa-comment"></i> 0
                                                </a>
                                            </li>
                                            <li>
                                                <a>
                                                    <i class="fas fa-eye"></i> @item.Id
                                                </a>
                                            </li>
                                        </ul>
                                        <h5 class="card-title">
                                            <a href="/Product/ProductReadAll/@item.Id">@item.BrandName</a>
                                            <a href="/Product/ProductReadAll/@item.Id">@item.ProductName</a>
                                        </h5>
                                        <p>@item.Price TL</p><br>
                                    </div>
                                </div>
                            }
                            <a href="/Product/AddProduct/" class="btn btn-primary">Yeni Ürün Ekle</a>

                        }
                    }
                    else
                    {
                        <a href="/Login/Index/">Önce Giriş Yapınız</a>
                    }

                </div>
            </div>
            <!--//left-->

        </div>
    </div>
</section>


