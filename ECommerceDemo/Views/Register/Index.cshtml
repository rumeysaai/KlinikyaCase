@using ECommerceDemo.Models
@model User

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Kayıt Ol</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form method="post">
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Adınız</label>
                            <input type="text" asp-for="@Model.FirstName" class="form-control" id="validationDefault01" name="FirstName" placeholder="" required="">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Soyadınız</label>
                            <input type="text" asp-for="@Model.LastName" class="form-control" id="validationDefault02" name="LastName" placeholder="" required="">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Kullanıcı Adı</label>
                            <input type="text" asp-for="@Model.UserName" class="form-control" id="username" name="UserName" placeholder="" required="">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Email</label>
                            <input type="text" asp-for="@Model.Email" class="form-control" id="email" name="Email" placeholder="" required="">
                        </div>

                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <select asp-for="@Model.Role" class="form-control" aria-required="true">
                                <option value="">Kullanıcı Rolü Seçiniz</option>
                                <option value="Admin">Admin</option>
                                <option value="Satıcı">Satıcı</option>
                                <option value="Müşteri">Müşteri</option>
                            </select>
                            <span asp-validation-for="@Model.Role" class="text-danger"></span><br />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Parola</label>
                            <input type="password" asp-for="@Model.Password" class="form-control" id="password1" name="Password" placeholder="" required="">
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
                    <p>
                        <a href="#">Tüm şartları okudum, kabul ediyorum</a>
                    </p>
                </form>

            </div>
        </div>
    </div>
</section>